<h2>分类</h2>
<hr>
<a href="/categories/new" class="btn btn-success pull-left">新建</a>
<table class="table table-hover user_table">
	<thead>
		<tr>
			<th></th>
			<th>ID</th>
			<th>名称</th>
			<th>创建时间</th>
		</tr>
	</thead>
	<%_.each(categories,function(cate){%>
	<tr>
		<td style="width:160px;">
			<a href="<%= '/categories/edit/'+cate.id%>" class="btn btn-primary inline">编辑</a>
			<a href="<%= '/categories/destroy/'+cate.id%>" class="btn btn-danger inline">删除</a>
		</td>
		<td><%=cate.id%></td>
		<td><%=cate.name%></td>
		<td><%=cate.createdAt.Format("yyyy-MM-dd HH:mm:ss")%></td>
		
	</tr>
	<%})%>
</table>
