<h2 class="form-signin-heading">发送通知</h2>
<hr>
<form action="/messages/create" method="POST" id="sign-up-form" class="form-horizontal" style="">
	<%- partial ('../common/error_shower.ejs') %>
	<div class="container">
		<div class="form-group">
			<label for="inputEmail3" class="col-sm-2 control-label">分类:</label>
			<div class="col-sm-2">
				<select name="category" class="form-control">
					<option value="0">未指定</option>
					<% if(categories){%>
					<% _.each(categories,function(cate){%>
					<option value="<%=cate.id%>"><%=cate.name%></option>
					<%}) %>
					<%}%>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label for="inputEmail3" class="col-sm-2 control-label">应用:</label>
			<div class="col-sm-2">
				<select name="app" class="form-control" id="">
					<% if(apps){%>
					<% _.each(apps,function(app){%>
					<option value="<%=app.id%>"><%=app.name%></option>
					<%}) %>
					<%}%>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label for="inputEmail3" class="col-sm-2 control-label">版本:</label>
			<div class="col-sm-2">
				<select name="os_type" class="form-control" id="" placeholder="分类">
					<option value="">所有</option>
					<option value="android">Android</option>
					<option value="ios">IOS</option>
				</select>
			</div>
			<div class="col-sm-2">
				<select id="android_version" name="android_version" class="form-control">
					<option value="">所有</option>
					<% if(android_versions){%>
					<% _.each(android_versions,function(version){%>
					<option value="<%=version.id+"_"+version.number%>"><%=version.number%></option>
					<%}) %>
					<%}%>	
				</select>
			</div>
			<div class="col-sm-2">
				<select id="ios_version" name="ios_version" class="form-control">
					<option value="">所有</option>
					<% if(ios_versions){%>
					<% _.each(ios_versions,function(version){%>
					<option value="<%=version.id+"_"+version.number%>"><%=version.number%></option>
					<%}) %>
					<%}%>
				</select>
			</div>
			<div class="col-sm-2">
				<p class="control-label pull-left">以上</p>
			</div>
		</div>
		<div class="form-group">
			<label for="inputEmail3" class="col-sm-2 control-label">用户ID:</label>
			<div class="col-sm-4">
				<input type="text" class="form-control" placeholder="用户ID,全部用户留空" name="user_ids">
			</div>
		</div>
		<div class="form-group">
			<label for="" class="col-sm-2 control-label">内容:</label>
			<div class="col-sm-4">
				<textarea type="text" class="form-control" placeholder='通知内容' name="content"></textarea>
			</div>
		</div>
		
		<div class="form-group">
			<label for="" class="col-sm-2 control-label">数据:</label>
			<div class="col-sm-4">
				<textarea type="text" class="form-control" placeholder='{"id":12,"Name":"Lucy"}' name="payloads"></textarea>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-4">
				<a class="btn btn-medium btn-default" href="/messages/index/">返回</a>
				<input type="submit" class="btn btn-success btn-inline" value="发送"/>
			</div>
		</div>
	</div>
</form>