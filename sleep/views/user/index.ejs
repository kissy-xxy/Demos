<h2>用户</h2>
<hr>
<a href="/user/new" class="btn btn-success pull-left">添加</a>
<table class="table table-hover user_table">
	<thead>
		<tr>
			<th></th>
			<th>ID</th>
			<th>Email</th>
			<th>姓名</th>
		</tr>
	</thead>
	<%_.each(users,function(user){%>
	<tr>
		
		<td style="width:200px;">
			<a href="<%= '/user/show/'+user.id%>" class="btn btn-default inline">查看</a>
			<a href="<%= '/user/edit/'+user.id%>" class="btn btn-primary">编辑</a>
			<a href="<%= '/user/destroy/'+user.id%>" class="btn btn-danger">删除</a>
		</td>
		<td><%=user.id%></td>
		<td><%=user.email%></td>
		<td><%=user.name%></td>
	</tr>
	<%})%>
</table>
<script src="/js/index.js"></script>