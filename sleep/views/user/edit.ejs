<h2>编辑</h2>
<hr>
<form action="/user/update/<%= user.id %>" method="POST" class="form-horizontal"> 
	<div class="form-group">
		<label class="col-sm-2 control-label">邮箱:</label>
		<div class="col-sm-3">
			<input value="<%= user.email %>" placeholder="email" name="email" type="text" class="form-control m-b"/>
		</div>
	</div>

	<div class="form-group">
		<label class="col-sm-2 control-label">昵称:</label>
		<div class="col-sm-3">
			<input value="<%= user.name %>" placeholder="name" name="name" type="text" class="form-control m-b"/>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-4">
			<a class="btn btn-default btn-medium" href="/categories/index">返回</a>
			<input type="submit" value="编辑" class="btn btn-primary btn-inline"/>
		</div>
	</div>
</form>